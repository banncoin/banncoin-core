[Unit]
Description=Banncoin Node Service
After=network.target

[Service]
WorkingDirectory=/root/bnc_full_chain
ExecStart=/usr/bin/python3 /opt/banncoin/bnc_node.py --chain-dir /root/bnc_full_chain
Restart=always
RestartSec=5
User=root
StandardOutput=append:/root/node_service.log
StandardError=append:/root/node_service.log
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
